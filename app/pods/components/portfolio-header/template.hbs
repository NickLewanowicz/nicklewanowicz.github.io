<div class="header particles header-bg layout-column" id="header">
  {{ember-particles
  class="particles"
  options=(ember-particles-options
    'particles.number.value' 150
    'particles.number.density.enable' true
    'particles.number.density.value_area' 800
    'particles.color.value' '#e37575'
    'particles.shape.type' 'circle'
    'particles.shape.stroke.width' 0
    'particles.shape.stroke.color' "#e37575"
    'particles.shape.polygon.mb_sides' 5
    'particles.opacity.value' 0.5
    'particles.opacity.random' false
    'particles.opacity.anim.speed' 1
    'particles.opacity.anim.enable' false
    'particles.opacity.anim.opacity_min' 0.1
    'particles.opacity.anim.sync' false
    'particles.size.value' 3
    'interactivity.events.onhover.enabled' true
    'interactivity.events.onhover.mode' 'grab'
    'interactivity.modes.grab.distance' 140
    'interactivity.modes.grab.line_linked.opacity' 1
    'interactivity.modes.bubble.distance' 400
    'interactivity.modes.bubble.size' 40
    'interactivity.modes.bubble.duration' 2
    'interactivity.modes.bubble.opacity' 8
    'interactivity.modes.bubble.speed' 3
    'interactivity.modes.repulse.distance' 200
    'interactivity.modes.repulse.duration' 0.4
    'interactivity.modes.grab.line_linked.opacity' 1
    'particles.line_linked.enable' true
    'particles.line_linked.color' "#e37575"
    'particles.line_linked.opacity' 0.4
    'particles.line_linked.width' 1
  )}}
  <div class='header-info layout-column layout-align-center-center gt-md big-header'>
    <div class="center layout-column">
    <h1 class="center">{{config.name}}</h1>
    <h2 class="center">{{config.position}}</h2>
    <a class="center dl-button md-default-theme md-button md-primary md-raised" href="Nicholas_Lewanowicz_Resume.pdf" download> Download Resume</a>
    </div>
    {{#paper-button href="#about" class="center scroll-down" iconButton=true}}{{paper-icon "keyboard-arrow-down" size=95}}{{/paper-button}}
  </div>
</div>
<div class='header-overlay'></div>
<div class='header-blur'></div>
<div id="header-down">
</div>

{{yield}}